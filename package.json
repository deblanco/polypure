{
  "name": "polypure",
  "version": "0.2.0",
  "description": "Polymarket SDK - thin TypeScript wrapper for CLOB API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "polypure": "./dist/cli.js",
    "polypure-mcp": "./dist/mcp.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && bun build src/cli.ts --outdir dist --target node && bun build src/mcp.ts --outdir dist --target node",
    "cli": "bun src/cli.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "polymarket",
    "prediction-markets",
    "clob",
    "defi",
    "trading"
  ],
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@polymarket/clob-client": "^5.1.3",
    "winston": "^3.19.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
