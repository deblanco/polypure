{
  "name": "polypure",
  "version": "1.6.0",
  "description": "Polymarket SDK - thin TypeScript wrapper for CLOB API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "polypure": "./dist/cli.js",
    "polypure-mcp": "./dist/mcp.js"
  },
  "scripts": {
    "build": "bun run build:lib && bun run build:cli && bun run build:mcp && bun run build:types",
    "build:lib": "vite build",
    "build:cli": "bun build src/cli.ts --outdir dist --target node",
    "build:mcp": "bun build src/mcp.ts --outdir dist --target node",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "cli": "bun src/cli.ts",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepare": "husky"
  },
  "keywords": [
    "polymarket",
    "prediction-markets",
    "clob",
    "defi",
    "trading",
    "sdk",
    "mcp"
  ],
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deblanco/polypure.git"
  },
  "homepage": "https://github.com/deblanco/polypure#readme",
  "bugs": {
    "url": "https://github.com/deblanco/polypure/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "lru-cache": "^11.2.5",
    "viem": "^2.21.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.3",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vite-plugin-node-polyfills": "^0.25.0"
  }
}
